{#
/**
 * Theme layout to all social media icons for social media icon blocks
 * Created by Jacob Korf on 2/15/2022
 */
#}

{% if items %}
	{% for item in items %}
		{%
    	set classes = [
    	'social-media-item',
    	'person-menu-item',
    	item.is_expanded ? 'menu-item--expanded',
    	item.is_collapsed ? 'menu-item--collapsed',
   		item.in_active_trail ? 'menu-item--active-trail',
    	]%}
		<li{{item.attributes.addClass(classes)}}>

			<!-- formattedContent turns each linkURL into usable, uppercase text to determine which icon to associate with each link -->
			{% set formattedContent = item.content['#url'] |render|striptags|trim|upper %}

			{% if 'TWITTER' in formattedContent %}
				<a href="{{ item.content['#url'] }}" title="Twitter" alt="Twitter">
					<span class="sr-only">Twitter</span>
					<i class="fab fa-twitter"></i>
				</a>
			{% elseif 'FACEBOOK' in formattedContent %}
				<a href="{{ item.content['#url'] }}" title="FaceBook" alt="FaceBook">
					<span class="sr-only">FaceBook</span>
					<i class="fab fa-facebook-square"></i>
				</a>

			{% elseif 'INSTAGRAM' in formattedContent %}
				<a href="{{ item.content['#url'] }}" title="Instagram" alt="Instagram">
					<span class="sr-only">Instagram</span>
					<i class="fab fa-instagram"></i>
				</a>

			{% elseif 'LINKEDIN' in formattedContent %}
				<a href="{{ item.content['#url'] }}" title="LinkedIn" alt="LinkedIn">
					<span class="sr-only">LinkedIn</span>
					<i class="fab fa-linkedin"></i>
				</a>

			{% elseif 'YOUTUBE' in formattedContent %}
				<a href="{{ item.content['#url'] }}" title="YouTube" alt="YouTube">
					<span class="sr-only">YouTube</span>
					<i class="fab fa-youtube"></i>
				</a>

			{% elseif 'PINTREST' in formattedContent %}
				<a href="{{ item.content['#url'] }}" title="Pintrest" alt="Pintrest">
					<span class="sr-only">Pintrest</span>
					<i class="fab fa-pinterest-square"></i>
				</a>

			{% elseif '@' in formattedContent %}
				<a href="{{ item.content['#url'] }}" title="Email" alt="Email">
					<span class="sr-only">Email</span>
					<i class="fas fa-envelope-square"></i>
				</a>

			{% else %}
				<a href="{{ item.content['#url'] }}" title="Social Media" alt="Social Media">
					<span class="sr-only">{{ item.content['#url'] }}</span>
					<i class="fa fa-external-link-alt"></i>
				</a>
				
			{% endif %}
		</li>
	{% endfor %}
{% endif %}
