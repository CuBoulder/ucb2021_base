{#
/**
 * Theme layout to all social media icons for social media icon blocks
 * Created by Jacob Korf on 2/15/2022
 */
#}

{% if items %}
	{% for item in items %}
		{%
    	set classes = [
    	'social-media-item',
    	'person-menu-item',
    	item.is_expanded ? 'menu-item--expanded',
    	item.is_collapsed ? 'menu-item--collapsed',
   		item.in_active_trail ? 'menu-item--active-trail',
    	]%}
		<li{{item.attributes.addClass(classes)}}>

			<!-- formattedContent turns each linkURL into usable, uppercase text to determine which icon to associate with each link -->
			{% set formattedContent = item.content['#url'] |render|striptags|trim|upper %}

			{% if 'TWITTER' in formattedContent %}
				<a href="{{ item.content['#url'] }}" class="icon-a" title="Twitter" alt="Twitter">
					<span class="icon-div">
						<span class="sr-only">Twitter</span>
						<span class="icon-bg icon-bg-twitter">
							<i class="fab fa-twitter icon-foreground"></i>
						</span>
						<span class="vertical-icon-span">Twitter</span>
					</span>
				</a>
			{% elseif 'FACEBOOK' in formattedContent %}
				<a href="{{ item.content['#url'] }}" class="icon-a" title="FaceBook" alt="FaceBook">
					<span class="icon-div">
						<span class="sr-only">FaceBook</span>
						<span class="icon-bg icon-bg-facebook">
							<i class="fab fa-facebook-f icon-foreground"></i>
						</span>
						<span class="vertical-icon-span">FaceBook</span>
					</span>
				</a>

			{% elseif 'INSTAGRAM' in formattedContent %}
				<a href="{{ item.content['#url'] }}" class="icon-a" title="Instagram" alt="Instagram">
					<span class="icon-div">
						<span class="sr-only">Instagram</span>
						<span class="icon-bg icon-bg-instagram">
							<i class="fab fa-instagram icon-foreground"></i>
						</span>
						<span class="vertical-icon-span">Instagram</span>
					</span>
				</a>

			{% elseif 'LINKEDIN' in formattedContent %}
				<a href="{{ item.content['#url'] }}" class="icon-a" title="LinkedIn" alt="LinkedIn">
					<span class="icon-div">
						<span class="sr-only">LinkedIn</span>
						<span class="icon-bg icon-bg-linkedin">
							<i class="fab fa-linkedin-in icon-foreground"></i>
						</span>
						<span class="vertical-icon-span">LinkedIn</span>
					</span>
				</a>

			{% elseif 'YOUTUBE' in formattedContent %}
				<a href="{{ item.content['#url'] }}" class="icon-a" title="YouTube" alt="YouTube">
					<span class="icon-div">
						<span class="sr-only">YouTube</span>
						<span class="icon-bg icon-bg-youtube">
							<i class="fab fa-youtube icon-foreground"></i>
						</span>
						<span class="vertical-icon-span">YouTube</span>
					</span>
				</a>
			{% elseif 'PINTREST' in formattedContent %}
					<a href="{{ item.content['#url'] }}" class="icon-a" title="Pintrest" alt="Pintrest">
						<span class="icon-div">
							<span class="sr-only">Pintrest</span>
							<span class="icon-bg icon-bg-pintrest">
								<i class="fab fa-pinterest-p icon-foreground"></i>
							</span>
							<span class="vertical-icon-span">Pintrest</span>
						</span>
					</a>

			{% else %}
				<a href="{{ item.content['#url'] }}" class="icon-a" title="Social Media" alt="Social Media">
					<span class="icon-div">
						<span class="sr-only">Link</span>
						<span class="icon-bg icon-bg-link">
							<i class="fas fa-external-link-alt icon-foreground"></i>
						</span>
						<span class="vertical-icon-span">Link</span>
					</span>
				</a>

			{% endif %}
		</li>
	{% endfor %}
{% endif %}
